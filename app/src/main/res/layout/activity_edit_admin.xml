<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".EditAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_baseline_edit_24"
            android:fontFamily="@font/carter_one"
            android:text="Edit product data"
            android:layout_marginHorizontal="70dp"
            android:textAlignment="center"
            android:textColor="#260251"
            android:textSize="25dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/editProductImage"
                android:layout_width="235dp"
                android:layout_height="239dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calistoga"
                    android:text="Name : "
                    android:textColor="#260251"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/editProductName"
                    android:layout_width="264dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Name"
                    android:textAlignment="center"
                    android:textSize="18dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Type : "
                    android:fontFamily="@font/calistoga"
                    android:textColor="#260251"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/editProductType"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Type"
                    android:textSize="18dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calistoga"
                    android:textColor="#260251"
                    android:text="Price : "
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/editProductPrice"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Price"
                    android:textSize="18dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calistoga"
                    android:textColor="#260251"
                    android:text="Available in stock : "
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/editProductNum"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Avail"
                    android:textSize="18dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calistoga"
                    android:textColor="#260251"
                    android:layout_marginLeft="10dp"
                    android:text="Description : "
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/editProductDescription"
                    android:layout_width="385dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Description"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/Confirm_edit"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:text="Edit"
                android:backgroundTint="#550D68"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>