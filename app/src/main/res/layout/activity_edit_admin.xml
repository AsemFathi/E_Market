<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditAdmin">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/editProductImage"
        android:layout_width="200dp"
        android:src="@drawable/ic_menu_gallery"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/editProductName"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Price"
            android:textSize="30dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Type : "
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/editProductType"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Type"
            android:textSize="30dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Price : "
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/editProductPrice"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Price"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Available in stock : "
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/editProductNum"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Avail"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Description : "
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/editProductDescription"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Description"
            android:textSize="30dp"

            />

    </LinearLayout>

    <Button
        android:id="@+id/Confirm_edit"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Add to Cart"
        android:textAlignment="center"
        android:textColor="#4B2885"
        android:textStyle="bold"
        />
</LinearLayout>