<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="2dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewCart"/>

    <TextView
        android:fontFamily="@font/calistoga"
        android:textColor="#260251"
        android:id="@+id/ItemNameCart"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/imageViewCart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/imageViewCart"

        android:text="Name" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/ItemPriceCart"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/calistoga"
        android:textColor="#260251"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageViewCart"
        android:layout_below="@+id/ItemNameCart"
        android:text="Price"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/ItemQuantityCart"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/calistoga"
        android:textColor="#260251"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ItemPriceCart"
        android:layout_below="@+id/ItemNameCart"
        android:text="Quantity"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
</RelativeLayout>